<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="SADL Category"
            id="sadl.commands.category">
      </category>
      <command
            name="Run Inference"
            categoryId="sadl.commands.category"
            id="SADL.RunInference">
      </command>
      <command
            categoryId="sadl.commands.category"
            id="SADL.RunQuery"
            name="Run Query">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="SADL.RunInference"
            class="com.ge.research.sadl.perspective.handlers.RunInference">
      </handler>
      <handler
            commandId="SADL.RunQuery"
            class="com.ge.research.sadl.perspective.handlers.RunQuery">
      </handler>
   </extension>
  
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="SADL.RunInference"            
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="SADL.RunQuery"            
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               icon="icons/releng_gears.gif"
               id="sadl.menus.sadlMenu"
               label="SADL"
               mnemonic="M">
               
             <visibleWhen checkEnabled="false">
  				<with variable="activeWorkbenchWindow.activePerspective">
     	   			<equals value="test.perspectives.SADL"/>
    			</with>
			</visibleWhen>
             <command
                   commandId="SADL.RunInference"
                   icon="icons/releng_gears.gif"
                   tooltip="Run Inference">
             </command>
             <command
                   commandId="SADL.RunQuery"
                   icon="icons/releng_gears.gif"
                   tooltip="Run Query">
             </command>
         </menu>
         
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="sadl.toolbar">
            <command
                  commandId="referenceToMenuId"
                  icon="icons/releng_gears.gif"
                  style="pulldown">
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
               </with>
            </visibleWhen>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:referenceToMenuId">
         <command
               commandId="SADL.RunInference"
               icon="icons/releng_gears.gif"
               label="Run Inference"
               style="push">
         </command>
         <command
               commandId="SADL.RunQuery"
               icon="icons/releng_gears.gif"
               label="Run Query"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="test.wizards.SADL"
            name="SADL">
      </category>
      <wizard
            category="test.wizards.SADL"
            class="wizards.SADL_Project"
            finalPerspective="test.perspectives.SADL"
            icon="icons/06-link.png"
            id="test.wizards.SadlProject"
            name="SADL Project"
            project="true">
      </wizard>
      <wizard
            category="test.wizards.SADL"
            class="wizards.SADL_File"
            finalPerspective="test.perspectives.SADL"
            icon="icons/releng_gears.gif"
            id="test.wizards.SADL_File"
            name="SADL Ontology File"
            project="false">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.ge.research.sadl.perspective.perspectives.SADL"
            icon="icons/06-link.png"
            id="sadl.perspectives.SADL"
            name="SADL">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.activities">
      <activity
            id="Lean_Test.activity1"
            name="Welcome">       
      </activity>
      <activityPatternBinding
            activityId="Lean_Test.activity1"
            pattern="org.eclipse.ui.help.quickStartAction">
      </activityPatternBinding>
      <activity
            id="Lean_Test.activity2"
            name="Java">
      </activity>
      <activityPatternBinding
            activityId="Lean_Test.activity2"
            pattern="org.eclipse.jdt.debug.ui ">
      </activityPatternBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            type="new"
            wizardId="test.wizards.SadlProject">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            type="new"
            wizardId="test.wizards.SADL_File">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            type="new"
            wizardId="test.wizards.REQ_File">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.eclipse.core.runtime.products">
      <product
            application="Lean_Test.product"
            name="preferenceDefaults">
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
</plugin>
