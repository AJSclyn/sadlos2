{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*",
        "typings/**/*",
        "typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}